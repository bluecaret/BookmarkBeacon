{
  "version": "1.0.0",
  "name": "bookmarkbeacon",
  "displayName": "BookmarkBeacon",
  "publisher": "bluecaret",
  "repository": "https://github.com/bluecaret/BookmarkBeacon",
  "description": "VSCode extension that lets you add a highly visible bookmark to your code",
  "keywords": [
    "bookmark",
    "bookmarks",
    "mark",
    "jump",
    "navigation",
    "multi-cursor",
    "multi-cursor support"
  ],
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#111",
    "theme": "dark"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bookmarkbeacon.toogleBookmarks",
        "title": "BookmarkBeacon: Toogle Bookmarks"
      },
      {
        "command": "bookmarkbeacon.clearAllBookmarks",
        "title": "BookmarkBeacon: Clear All Bookmarks"
      },
      {
        "command": "bookmarkbeacon.navigateToNextBookmark",
        "title": "BookmarkBeacon: Move cursor to the next bookmark"
      },
      {
        "command": "bookmarkbeacon.navigateToPrevBookmark",
        "title": "BookmarkBeacon: Move cursor to the previous bookmark"
      }
    ],
    "keybindings": [
      {
        "command": "bookmarkbeacon.toogleBookmarks",
        "key": "ctrl+m",
        "mac": "cmd+m",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkbeacon.clearAllBookmarks",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkbeacon.navigateToNextBookmark",
        "key": "f2",
        "mac": "f2",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkbeacon.navigateToPrevBookmark",
        "key": "shift+f2",
        "mac": "shift+f2",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "bookmarkbeacon configuration",
      "properties": {
        "bookmarkbeacon.alignTopOnNavigation": {
          "type": "boolean",
          "default": false,
          "description": "If set bookmarked line will become the topmost when using next / previous navigation commands"
        },
        "bookmarkbeacon.renderLine": {
          "type": "boolean",
          "default": true,
          "description": "If set render a line on the bookmark"
        },
        "bookmarkbeacon.lineColor": {
          "type": [
            "string"
          ],
          "default": "#65EAB9",
          "description": "Change the line color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
        },
        "bookmarkbeacon.lineWidth": {
          "type": [
            "string"
          ],
          "default": "1px"
        },
        "bookmarkbeacon.lineStyle": {
          "type": [
            "string"
          ],
          "enum": [
            "solid",
            "dashed",
            "inset",
            "double",
            "groove",
            "outset",
            "ridge"
          ],
          "default": "solid"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "mocha-each": "^2.0.1",
    "prettier": "^2.0.2",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/mocha-each": "^2.0.0"
  }
}
